define host {
    use                     linux-server
    host_name               {{ nameHost }}
    alias                   {{ nameHost }}
    address      	    {{ ipAddress }}
}

define service {
    use                     generic-service
    host_name               {{ nameHost }}
    service_description     PING
    check_command           check_ping!100.0,20%!500.0,60%
}

define service {
    use                     generic-service
    host_name               {{ nameHost }}
    service_description     HTTP
    check_command           check_http!1!2
}

define service {
    use                     generic-service
    host_name               {{ nameHost }}
    service_description     SSH
    check_command           check_ssh!22
}

define service {
    use                     generic-service
    host_name               {{ nameHost }}
    service_description     LOAD
    check_command           check_nrpe!check_load
}

define service {
    use                     generic-service
    host_name               {{ nameHost }}
    service_description     MEMORY
    check_command           check_nrpe!check_memory
}
